# ===========================================
# META CHANNELS MICROSERVICE - CONFIGURACIÓN
# ===========================================
# Copia este archivo a .env y configura los valores

# Servidor
META_CHANNELS_PORT=3005
NODE_ENV=production

# Flow Builder (app principal)
FLOW_BUILDER_URL=http://localhost:3001
FLOW_BUILDER_API_KEY=tu_api_key_aqui

# API Key para este microservicio (generar un UUID seguro)
META_CHANNELS_API_KEY=genera_un_uuid_seguro_aqui

# ===========================================
# META (Webhook verification)
# ===========================================
META_VERIFY_TOKEN=tu_token_verificacion_webhook
META_APP_SECRET=tu_app_secret_de_meta

# ===========================================
# WHATSAPP BUSINESS API
# ===========================================
WHATSAPP_ENABLED=false
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# ===========================================
# INSTAGRAM
# ===========================================
INSTAGRAM_ENABLED=false
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_IG_USER_ID=
INSTAGRAM_PAGE_ID=

# ===========================================
# FACEBOOK
# ===========================================
FACEBOOK_ENABLED=false
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_PAGE_ID=

# ===========================================
# BITRIX24 OPEN CHANNELS
# ===========================================
BITRIX_ENABLED=false
# Formato: https://tu-dominio.bitrix24.com/rest/1/tu_webhook_token/
BITRIX_WEBHOOK_URL=
# ID único del conector (ejemplo: flow_builder_connector)
BITRIX_CONNECTOR_ID=flow_builder_connector

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
# Directorio de logs (opcional, por defecto: ./logs)
LOG_DIR=./logs
